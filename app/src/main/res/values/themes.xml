        <item name="colorSecondary">@color/blue_100</item>
        <item name="colorSecondaryVariant">@color/blue_100_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_100_dark</item>
    </style>

    <style name="Theme.Quiz.Third" parent="Theme.Quiz">
        <item name="colorPrimary">@color/yellow_100</item>
        <item name="colorPrimaryDark">@color/yellow_100_dark</item>
        <item name="colorPrimaryVariant">@color/yellow_100_dark</item>
        <item name="android:toolbarStyle">@color/yellow_100_dark</item>
        <item name="colorSecondary">@color/yellow_100</item>
        <item name="colorSecondaryVariant">@color/yellow_100_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yellow_100_dark</item>
    </style>

    <style name="Theme.Quiz.Fourth" parent="Theme.Quiz">
        <item name="colorPrimary">@color/deep_orange_100</item>
        <item name="colorPrimaryDark">@color/deep_orange_100_dark</item>
        <item name="colorPrimaryVariant">@color/deep_orange_100_dark</item>
        <item name="android:toolbarStyle">@color/deep_orange_100_dark</item>
        <item name="colorSecondary">@color/deep_orange_100</item>
        <item name="colorSecondaryVariant">@color/deep_orange_100_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/deep_orange_100_dark</item>
    </style>

    <style name="Theme.Quiz.Fives" parent="Theme.Quiz">
        <item name="colorPrimary">@color/deep_red_100</item>
        <item name="colorPrimaryDark">@color/deep_red_100_dark</item>
        <item name="colorPrimaryVariant">@color/deep_red_100_dark</item>
        <item name="android:toolbarStyle">@color/deep_red_100_dark</item>
        <item name="colorSecondary">@color/deep_red_100</item>
        <item name="colorSecondaryVariant">@color/deep_red_100_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/deep_red_100_dark</item>
    </style>

    <style name="Theme.Quiz.Result" parent="Theme.Quiz">
        <item name="colorPrimary">@color/light_green_100</item>
        <item name="colorPrimaryDark">@color/light_green_100_dark</item>
